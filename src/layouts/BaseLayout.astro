---
import { SEO, type Props as SEOProps } from "astro-seo";
import type { WithContext } from "schema-dts";
import "overlayscrollbars/overlayscrollbars.css";
import { OverlayScrollbarsComponent } from "overlayscrollbars-react";
import "overlayscrollbars/overlayscrollbars.css";

export type SEOFieldProps = SEOProps;

interface Props {
  SEOFields: SEOProps;
  structuredData?: WithContext<any>;
}

const { SEOFields, structuredData } = Astro.props;
---

<!doctype html>
<html lang="en" transition:name="root" class="bg-dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="https:/deathscenela.com/logo.svg">
    <SEO {...SEOFields} />
    <!-- Meta Pixel Code -->
      <script is:inline>
        !function(f,b,e,v,n,t,s)
        {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
        n.callMethod.apply(n,arguments):n.queue.push(arguments)};
        if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
        n.queue=[];t=b.createElement(e);t.async=!0;
        t.src=v;s=b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t,s)}(window, document,'script',
        'https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', '3460828890887094');
        fbq('track', 'PageView');
      </script>
      <noscript><img height="1" width="1" style="display:none"
        src="https://www.facebook.com/tr?id=3460828890887094&ev=PageView&noscript=1"
      /></noscript>
    <!-- End Meta Pixel Code -->
  </head>
  <body class="bg-dark">
  <OverlayScrollbarsComponent
    client:load
    element="div"
    options={{
      scrollbars: {
        autoHide: "scroll",
        autoHideDelay: 500,
      },
    }}
  >
      <slot />
  </OverlayScrollbarsComponent>
  </body>
</html>
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

